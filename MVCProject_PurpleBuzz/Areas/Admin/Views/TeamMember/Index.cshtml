@using MVCProject_PurpleBuzz.Models;
@model List<TeamMember>;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <a asp-action="create" asp-controller="teammember" asp-area="admin" class="btn btn-primary col-2">Create</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">@item.Id</td>
                            <td>
                                <img src="~/assets/img/@item.PhotoName" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Position</td>
                            <td>
                                <a class="btn btn-primary" asp-action="update" asp-controller="teammember" asp-area="admin" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger" asp-action="delete" asp-controller="teammember" asp-area="admin" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
