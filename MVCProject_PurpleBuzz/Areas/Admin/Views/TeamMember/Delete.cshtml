@using MVCProject_PurpleBuzz.Models;
@model TeamMember;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Delete team member
                        </p>
                        <span>Name:</span> <span>@Model.Name</span>
                        <br />
                        <br />
                        <span>Position:</span> <span>@Model.Position</span>
                        <br />
                        <span>Image:</span> <span><img style="width:100px; height:100px; border-radius: 50%;" src="~/assets/img/@Model.PhotoName" /></span>
                        <br />
                        <br />


                        <form method="post" asp-action="deletecomponent" asp-controller="teammember" asp-area="admin" asp-route-id="@Model.Id" class="forms-sample">
                            <button type="submit" class="btn btn-danger me-2">Delete</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>