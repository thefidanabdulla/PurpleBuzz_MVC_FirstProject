@using MVCProject_PurpleBuzz.Models;
@model RecentWork;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Update recent work
                        </p>
                        <form method="post" asp-action="update" asp-controller="recentwork" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desc">Description</label>
                                <input class="form-control" asp-for="Desc">
                                <span class="text-danger" asp-validation-for="Desc"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImagePath">Image path</label>
                                <input class="form-control" asp-for="ImagePath">
                                <span class="text-danger" asp-validation-for="ImagePath"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>